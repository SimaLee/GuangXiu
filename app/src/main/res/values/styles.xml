<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 首页的text背景 -->
    <style name="TextBackgroundStyle">
    <item name="android:textSize">30sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:paddingBottom">6dp</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:background">@drawable/bg_text</item>
</style>

    <style name="TitleTextStyle">
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:background">@color/colorYellow</item>
    </style>

    <style name="popupWindowAnimRight">
        <item name="android:windowEnterAnimation">@anim/page_anima_right_in</item>
        <item name="android:windowExitAnimation">@anim/page_anima_right_out</item>
    </style>

</resources>
