<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
               android:background="@null"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/bt_panorama"
        android:background="@drawable/bg_white_button2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="添加全景图作品"
        android:textColor="#F5857A"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/bt_photo"
        android:layout_below="@+id/bt_panorama"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_white_button3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="添加普通照片作品"
        android:textColor="#0076FF"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        />

</RelativeLayout>