<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/embroideryItemRL"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/selector_item_embroidery_works">
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop"
        android:id="@+id/embroideryIV"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:transitionName="iv_embroidery"/>
    <TextView
        android:id="@+id/embroideryNameTV"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/embroideryIV"
        android:textSize="16sp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>