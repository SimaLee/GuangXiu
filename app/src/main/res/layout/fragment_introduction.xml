<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="广绣介绍"
        style="@style/TitleTextStyle"/>

    <TextView
        android:id="@+id/tv_gx_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:padding="4dp"
        android:text="广绣是中国四大名绣之一，快来看看你对广绣了解多少吧！"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_gx_introduction"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_introduction_item">

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_assignment_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="悠远历史"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_technique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_history"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_introduction_item">

        <ImageView
            android:id="@+id/iv_technique"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_technique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="绚烂技艺"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_technique"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_introduction_item">

        <ImageView
            android:id="@+id/iv_process"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_gesture_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="工艺流程"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_process"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_introduction_item">

        <ImageView
            android:id="@+id/iv_quiz"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_live_help_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="绣知多少"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_my_local_works"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_quiz"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_introduction_item">

        <ImageView
            android:id="@+id/iv_local_works"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_live_help_black_24dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_local_works"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="我的作品"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>