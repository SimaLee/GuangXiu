<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabPadding="5dp"
        app:tabGravity="fill">

    </android.support.design.widget.TabLayout>

    <com.simalee.guangxiu.widget.MultiItemContainerNew
        android:id="@+id/container_pergola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_type"/>

    <com.simalee.guangxiu.widget.MultiItemContainerNew
        android:id="@+id/container_needle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_type"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_thread_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tab_type">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:text="暂时还没有数据哦！"/>

</RelativeLayout>