<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_thread"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_thread_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_thread"
        android:layout_alignRight="@id/iv_thread"
        android:text="八股线"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_below="@id/iv_thread"/>

    <com.simalee.guangxiu.widget.MultiItemContainerNew
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_thread"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>